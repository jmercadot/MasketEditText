<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="25dp"
        android:height="25dp">
        <shape android:shape="oval">
            <gradient android:startColor="?android:colorPrimary"
                android:centerColor="?android:colorAccent"
                android:endColor="?android:colorPrimary"
                android:type="sweep"
                />
        </shape>
    </item>

    <item
        android:width="25dp"
        android:height="25dp">
        <rotate
            android:drawable="@drawable/ic_arrow_drop_down_white_24dp"
            android:pivotX="50%"
            android:pivotY="50%"
            android:fromDegrees="0"
            android:toDegrees="360"
            >
        </rotate>
    </item>

</layer-list>